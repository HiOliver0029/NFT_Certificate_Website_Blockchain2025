  "license": "MIT",
  "devDependencies": {
    "hardhat": "^2.22.15",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@openzeppelin/contracts": "^5.1.0",
    "ethers": "^6.13.4",
    "dotenv": "^16.4.5",
    "axios": "^1.7.7",
    "form-data": "^4.0.1"
  }
